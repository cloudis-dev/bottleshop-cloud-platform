{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "types": ["node"],
    "target": "es2017",
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "esModuleInterop": true,
    "importHelpers": true
  },
  "exclude": ["**/*.spec.ts"],
  "include": ["src/**/*.ts"]
}
