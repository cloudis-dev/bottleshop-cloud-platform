{
  "extends": [
    "../../.eslintrc.json",
    "plugin:promise/recommended",
    "prettier"
  ],
  "plugins": [
    "@nrwl/nx",
    "promise"
  ],
  "ignorePatterns": [
    "!**/*"
  ],
  "parserOptions": {
    "ecmaVersion": "2017"
  },
  "overrides": [
    {
      "files": [
        "*.ts",
        "*.tsx",
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    },
    {
      "files": [
        "*.ts",
        "*.tsx"
      ],
      "rules": {
        "quotes": [
          "error",
          "single"
        ],
        "import/no-unresolved": 0,
        "promise/always-return": 2,
        "promise/catch-or-return": 2,
        "promise/no-nesting": 1,
        "consistent-return": 1,
        "array-callback-return": 1,
        "eqeqeq": 2,
        "no-eq-null": 2,
        "no-await-in-loop": 2,
        "callback-return": 2,
        "handle-callback-err": 2
      }
    },
    {
      "files": [
        "*.js",
        "*.jsx"
      ],
      "rules": {}
    }
  ]
}
