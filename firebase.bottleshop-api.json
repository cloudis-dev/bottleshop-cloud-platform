{
  "database": {
    "rules": "apps/bottleshop-api/database.rules.json"
  },
  "firestore": {
    "rules": "apps/bottleshop-api/firestore.rules",
    "indexes": "apps/bottleshop-api/firestore.indexes.json"
  },
  "hosting": {
    "public": "apps/bottleshop-api/public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "apps/bottleshop-api/storage.rules"
  },
  "functions": {
    "predeploy": [
      "npx nx build bottleshop-api --with-deps",
      "npx nx lint bottleshop-api"
    ],
    "source": "dist/apps/bottleshop-api"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "auth": {
      "port": "9099"
    },
    "pubsub": {
      "port": "8085"
    }
  }
}
